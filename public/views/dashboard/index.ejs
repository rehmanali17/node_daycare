<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="../../css/bootstrap.min.css">
    <link rel="stylesheet" href="../../css/style.css">
</head>

<body>
    <% if (plans.length > 0) { %>   
        <h1 class="text-center mb-4 mt-4 text-primary">My Plans</h1>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <table style="width: 100%;">
                        <thead>
                            <tr style="text-align: center;" >
                                <th>Count</th>
                                <th>Plan</th>
                                <th>Time</th>
                                <th>View</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let i = 0; plans.forEach((row)=>{ i++; %>
                                <tr style="text-align: center;">
                                    <td><%= i %> </td>
                                    <td><%= row.title %> </td>
                                    <td><%= row.p_time %> </td>
                                    <td><a href=""><i class="fas fa-eye"></i></a></td>
                                    <td><a style="cursor: pointer;" id="delete-btn" data-email="" data-id="" data-time=""><i class="fas fa-trash-alt"></i></a></td>
                                </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
         <% } else { %>
            <p class="text-center alert alert-danger w-100">No plans bought</p>
            <% } %> 
    <script src="../js/jquery.min.js"></script>
    <script>
    $(()=>{
        $(document).on("click", "#delete-btn", function() {
                var r = confirm("Do you want to delete this Plan!");
                if (r == true) {
                    let email = $(this).data('email');
                    let id = $(this).data('id');
                    let time = $(this).data('time');
                    let element = this;
                    $.ajax({
                        url: 'delete-plan.php',
                        type: 'POST',
                        data: {
                            email,
                            time,
                            id
                        },
                        success: function(data) {
                            if (data == 1) {
                                $(element).closest("tr").fadeOut();
                            } else {
                                alert("Can't Delete Record.");
                            }
                        }
                    })
                } else {
                    alert("You pressed cancel. Plan is not removed.");
                }
            });
    })
    </script>
</body>

</html>